@model WebApp_MVC.Models.ModeloUsuario
@{
    ViewBag.Title = "perfilP";
}

<link href="~/Content/loginestilo.css" rel="stylesheet" id="login-css">
<div class="container">
    <div class="container body-content" style="background-color:white">
        <div class="col-xs-12 col-sm-12 col-md-6 col-lg-6 col-xs-offset-0 col-sm-offset-0 col-md-offset-3 col-lg-offset-3 toppad">


            <div class="panel panel-info">
                <div class="panel-heading">
                    <h3 class="panel-title">@Html.DisplayFor(model => model.nombre)</h3>
                </div>
                <div class="panel-body">
                    <div class="row">
                        <div class="col-md-4 col-lg-4 " align="center"> <img alt="User Pic" src="~/Content/img/user.png" class="img-circle img-responsive"> </div>
                        <div class=" col-md-10 col-lg-10 ">
                            <table class="table table-user-information">
                                <tbody>
                                    <tr>
                                        <td>Nombre:</td>
                                        <td>@Html.DisplayFor(model => model.nombre)</td>
                                    </tr>
                                    <tr>
                                        <td>Apellidos: </td>
                                        <td>@Html.DisplayFor(model => model.apellidos)</td>
                                    </tr>
                                    <tr>
                                        <td>Email: </td>
                                        <td><a>@Html.DisplayFor(model => model.correo)</a></td>
                                    </tr>
                                </tbody>
                            </table>
                            <a class="btn btn-primary"@Html.ActionLink("Talleres a Cargo", "talleresACargo", "Account")</a>
                            <a class="btn btn-primary" @Html.ActionLink("Desactivar Cuenta", "DesactCuenta", "Account")</a>
                            <a class="btn btn-primary" @Html.ActionLink("Volver a inicio", "redirectExito", "Account")</a>
                        </div>
                    </div>
                </div>
                <div class="panel-footer">
                    <a data-original-title="Cerrar Sesion" data-toggle="tooltip" type="button" class="btn btn-sm btn-primary"><i class="glyphicon glyphicon-remove"></i></a>
                    <span class="pull-right">
                        <a href="edit.html" data-original-title="Edit this user" data-toggle="tooltip" type="button" class="btn btn-sm btn-warning"><i class="glyphicon glyphicon-edit"></i></a>
                    </span>
                </div>

            </div>
        </div>
    </div>
</div>

