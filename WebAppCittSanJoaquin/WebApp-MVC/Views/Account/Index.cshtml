<script src="~/Scripts/jquery-1.10.2.min.js"></script>
<link href="~/Content/loginestilo.css" rel="stylesheet" id="login-css">
@* PARA HACER COMENTARIOS VELOZMENTE USAD ctrl + k, ctrl + c
    Y PARA DESCOMENTAR ctrl + k, ctrl + u
